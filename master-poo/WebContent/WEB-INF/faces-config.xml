<?xml version="1.0"?>

<faces-config>
	<application>
        <locale-config>
            <default-locale>en</default-locale>
            <supported-locale>en</supported-locale>
        </locale-config>
        <message-bundle>app.bundle</message-bundle>
    </application>
    <managed-bean>
		<managed-bean-name>dataRepository</managed-bean-name>
		<managed-bean-class>app.model.DataRepository</managed-bean-class>
		<managed-bean-scope>application</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>listPostsController</managed-bean-name>
		<managed-bean-class>app.controller.ListPostsController</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
		<managed-property>
			<property-name>dataRepository</property-name>
			<property-class>app.model.DataRepository</property-class>
			<value>#{dataRepository}</value>
		</managed-property>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>showPostController</managed-bean-name>
		<managed-bean-class>app.controller.ShowPostController</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
		<managed-property>
			<property-name>dataRepository</property-name>
			<property-class>app.model.DataRepository</property-class>
			<value>#{dataRepository}</value>
		</managed-property>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>addPostController</managed-bean-name>
		<managed-bean-class>app.controller.AddPostController</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
		<managed-property>
			<property-name>dataRepository</property-name>
			<property-class>app.model.DataRepository</property-class>
			<value>#{dataRepository}</value>
		</managed-property>
	</managed-bean>
	
	<navigation-rule> 
		<from-view-id>/pages/listPosts.jsp</from-view-id> 
		<navigation-case> 
			<from-outcome>show</from-outcome> 
			<to-view-id>/pages/showPost.jsp</to-view-id> 
		</navigation-case> 
		<navigation-case> 
			<from-outcome>add</from-outcome> 
			<to-view-id>/pages/addPost.jsp</to-view-id> 
		</navigation-case> 
	</navigation-rule>  
</faces-config>
